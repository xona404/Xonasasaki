    <script>
    const INSTAGRAM_ACCESS_TOKEN = "IGAFxlEd59KZBtBZAFlIWnk2cFBxR1RvRFJNSm9PVXBPVy1LMFdING54VzNWQVRSM1dlVzhOQmJHSWRLejgwV1ZAwYkY4WEliZAHctT2ZA0UnQ3bC1ZAY2F6ZAFRoNFFNMkJHTlpEbGhKVjRMZA3RzNmdNM0VPakJnSDM4QVBHYkF4V0FvNAZDZD";
    let allMedia = [];
    let currentFilter = 'all';

    function initHeroSlideshow() {
        const slides = document.querySelectorAll('#hero-slideshow .slide');
        if (slides.length <= 1) return;
        let currentSlide = 0;
        setInterval(() => {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
        }, 5000);
    }

  async function fetchAllMedia() {
    if (!INSTAGRAM_ACCESS_TOKEN) return showMock();
    try {
        const response = await fetch(`https://graph.instagram.com/me/media?fields=id,caption,media_type,media_url,permalink,like_count,children{media_url,media_type}&limit=50&access_token=${INSTAGRAM_ACCESS_TOKEN}`);
        const data = await response.json();
        if (data && data.data) {
            allMedia = data.data.filter(p => p.media_type !== "VIDEO").map(post => {
                const caption = (post.caption || "").toLowerCase();
                return {
                    media_url: post.media_url,
                    permalink: post.permalink,
                    category: caption.includes('#campaign') ? 'campaign' : 
                              caption.includes('#editorial') ? 'editorial' : 
                              caption.includes('#commercial') ? 'commercial' : 'all',
                    likes: post.like_count || 0,
                    slides: (post.media_type === "CAROUSEL_ALBUM" && post.children) ? 
                            post.children.data.map(c => c.media_url) : [post.media_url]
                };
            });
                
                // Sort by likes descending
                allMedia.sort((a, b) => b.likes - a.likes);

                // Update Hero Slideshow with Top 5
                const top5 = allMedia.slice(0, 5);
                const heroContainer = document.getElementById('hero-slideshow');
                const overlay = heroContainer.querySelector('.z-10'); // Save the text overlay
                
                // Clear and rebuild slides
                heroContainer.innerHTML = '';
                top5.forEach((item, idx) => {
                    const slideDiv = document.createElement('div');
                    slideDiv.className = `slide ${idx === 0 ? 'active' : ''}`;
                    slideDiv.innerHTML = `<img src="${item.media_url}" class="w-full h-full object-cover grayscale brightness-75">`;
                    heroContainer.appendChild(slideDiv);
                });
                heroContainer.appendChild(overlay); // Put text back on top
                
                initHeroSlideshow();
                renderTeaser(allMedia.slice(0, 4));
            } else { showMock(); }
        } catch (e) { showMock(); }
    }

    function renderPortfolio() {
        const grid = document.getElementById('portfolio-grid');
        if (!grid) return;
        const items = currentFilter === 'all' ? allMedia : allMedia.filter(m => m.category === currentFilter);
        grid.innerHTML = items.map((item) => {
            const globalIdx = allMedia.indexOf(item);
            const albumTag = item.slides.length > 1 ? `
                <div class="absolute top-4 right-4 z-30 album-indicator">
                    <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                        <path d="M7 3h14a2 2 0 012 2v14a2 2 0 01-2 2H7a2 2 0 01-2-2V5a2 2 0 012-2z"/><path d="M3 7v14a2 2 0 002 2h14" opacity="0.4"/>
                    </svg><span>${item.slides.length}</span>
                </div>` : '';

            return `
            <div onclick="openLightbox(${globalIdx})" class="portfolio-card cursor-pointer group relative aspect-[3/4] overflow-hidden bg-neutral-100 fade-in">
                <img src="${item.media_url}" loading="lazy" class="card-img absolute inset-0 w-full h-full object-cover grayscale">
                ${albumTag}
                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex flex-col justify-end p-6 text-white z-20">
                    <p class="text-[8px] uppercase tracking-widest mb-1 font-bold">${item.category}</p>
                    <p class="text-[10px] tracking-widest uppercase opacity-70">Explore Gallery</p>
                </div>
            </div>`;
        }).join('');
    }

    function openLightbox(postIndex) {
        const post = allMedia[postIndex];
        const container = document.getElementById('lightbox-scroll-container');
        const dotsContainer = document.getElementById('lightbox-dots');
        container.innerHTML = post.slides.map(src => `<div class="lightbox-slide"><img src="${src}" draggable="false"></div>`).join('');
        dotsContainer.innerHTML = post.slides.length > 1 ? post.slides.map((_, i) => `<div class="dot ${i === 0 ? 'active' : ''}" data-index="${i}"></div>`).join('') : '';
        container.onscroll = () => {
            const index = Math.round(container.scrollLeft / container.clientWidth);
            updateIndicator(index, post.slides.length);
        };
        updateIndicator(0, post.slides.length);
        document.getElementById('lightbox-cat-label').innerText = post.category;
        document.getElementById('lightbox-link').href = post.permalink;
        document.getElementById('lightbox').classList.remove('hidden');
        document.getElementById('lightbox').classList.add('flex');
        document.body.style.overflow = 'hidden';
        container.scrollLeft = 0;
    }

    function updateIndicator(index, total) {
        const counter = document.getElementById('lightbox-counter');
        if(counter) counter.innerText = total > 1 ? `${index + 1} / ${total}` : '';
        const dots = document.querySelectorAll('.dot');
        dots.forEach((dot, i) => dot.classList.toggle('active', i === index));
    }

    function closeLightbox() {
        document.getElementById('lightbox').classList.add('hidden');
        document.body.style.overflow = 'auto';
    }

    function toggleMobileMenu() {
        const overlay = document.getElementById('mobile-menu-overlay');
        const body = document.body;
        if (!body.classList.contains('menu-open')) {
            overlay.classList.add('active');
            body.classList.add('menu-open');
            body.style.overflow = 'hidden';
        } else {
            overlay.classList.remove('active');
            body.classList.remove('menu-open');
            body.style.overflow = '';
        }
    }

    function navigate(pageId) {
        document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
        const targetPage = document.getElementById(pageId);
        if(targetPage) targetPage.classList.add('active');
        document.querySelectorAll('.nav-link').forEach(link => {
            const active = link.getAttribute('data-page') === pageId;
            link.classList.toggle('text-black', active);
            link.classList.toggle('text-gray-400', !active);
            link.classList.toggle('relative', active);
            link.classList.toggle('after:absolute', active);
            link.classList.toggle('after:bottom-[-4px]', active);
            link.classList.toggle('after:left-0', active);
            link.classList.toggle('after:w-full', active);
            link.classList.toggle('after:h-[1px]', active);
            link.classList.toggle('after:bg-black', active);
        });
        if (pageId === 'portfolio') renderPortfolio();
        document.getElementById('main-content').scrollTop = 0;
    }

    function filterPortfolio(category) {
        currentFilter = category;
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.classList.toggle('text-black', btn.id === `btn-${category}`);
            btn.classList.toggle('text-gray-400', btn.id !== `btn-${category}`);
        });
        renderPortfolio();
    }

    function renderTeaser(items) {
        const teaser = document.getElementById('insta-teaser');
        if (teaser) teaser.innerHTML = items.map(item => `
            <div onclick="openLightbox(${allMedia.indexOf(item)})" class="aspect-square cursor-pointer overflow-hidden group bg-neutral-100">
                <img src="${item.media_url}" class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all">
            </div>`).join('');
    }

    function showMock() {
        allMedia = [
            { media_url: 'https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?w=1200', slides: ['https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?w=1200'], permalink: '#', category: 'editorial', likes: 1240 },
            { media_url: 'https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=1200', slides: ['https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=1200'], permalink: '#', category: 'commercial', likes: 980 }
        ];
        renderTeaser(allMedia.slice(0, 4));
        initHeroSlideshow();
    }

    window.onload = () => { fetchAllMedia(); };
    document.addEventListener('keydown', (e) => { if(e.key === 'Escape') closeLightbox(); });
    </script>

